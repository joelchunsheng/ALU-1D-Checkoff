module alu_test_rom_alufn (
    input addr[4],    // Address width depends on the number of test cases (16 entries)
    output data[6]    // Output ALUFN[6]
) {
    // Declare a constant ROM for ALUFN with 16 entries, each being 6 bits wide
    const ROM_ALUFN = {
        6h00, // ALUFN = 0 (for ADD)
        6h01 // ALUFN = 1 (for SUB)
    };

    always {
        data = ROM_ALUFN[addr];  // Output ALUFN based on the address
    }
}
